from sklearn.metrics import mean_squared_error, mean_absolute_error

def evaluate(model):
    preds = model.predict(X_test).flatten()
    rmse = np.sqrt(mean_squared_error(y_test, preds))
    mae = mean_absolute_error(y_test, preds)
    mape = np.mean(np.abs((y_test - preds) / y_test)) * 100
    return rmse, mae, mape

base_rmse, base_mae, base_mape = evaluate(baseline)
att_rmse, att_mae, att_mape = evaluate(att_model)

print("\nBaseline LSTM → RMSE:", base_rmse, "MAE:", base_mae, "MAPE:", base_mape)
print("Attention LSTM → RMSE:", att_rmse, "MAE:", att_mae, "MAPE:", att_mape)
